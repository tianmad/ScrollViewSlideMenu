<?xml version="1.0" encoding="utf-8"?>
<com.example.scrollviewslidemenu.SlideMennu xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:menu="http://schemas.android.com/apk/res/com.example.scrollviewslidemenu"
    android:id="@+id/view_menu"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:scrollbars="none"
    menu:menuPaddingRight="60dp" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="horizontal" >

        <include layout="@layout/menu" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:src="@drawable/qq" >

            <ListView
                
                android:id="@+id/listview_main"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >
            </ListView>
        </LinearLayout>
    </LinearLayout>

</com.example.scrollviewslidemenu.SlideMennu>